<div class = "container">

    {{!-- begin jumbotron --}}
    <div class="jumbotron">
        <h1>Fat Dude Burger</h1>
        <p>Come And Get Your Lard</p>
        <br>
        <h2>Roll a Fatty</h2>
        <panel>
            <form class="create-form">
                <div class="form-group">
                    <label for="newburger" id="color-override">New Fat Burger:</label>
                    <input type="text" id="newburger" name="burger">
                    <button type="submit" class="btn btn-success" id="addburger">Add a New Burger!</button>
                </div>
            </form>
        </panel>
    </div>
    {{!-- end jumbotron --}}

    <div class="row">
        <!-- Undevoured Burgers -->
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="leftcolumn"><strong>New Fatties</strong></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                            {{#unless devoured}}
                                <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                                <button type="button" class="eatburger btn btn-warning" id ="eatbutton" data-id="{{this.id}}" data-newDevoured="{{devoured}}">EAT IT, FATTY</button>
                                <hr>
                            {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        <!-- Devoured Burgers -->
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="rightcolumn"><strong>Devoured Fatties</strong></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                            {{#if devoured}}
                                <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                                <button type="button" class="devouredburger btn btn-danger" id ="devouredButton" data-id="{{this.id}}" data-newDevoured="{{devoured}}">Already Eaten</button>
                                <hr>
                            {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>